pipeline {
    agent {
        docker {
            image 'node:20'
            args '--network host'
        }
    }

    environment {
        REPO_URL = "https://github.com/Kunal061/react-app-deploy_v1.git"
        BRANCH = "main"
        CI = 'true'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: "${env.BRANCH}", url: "${env.REPO_URL}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
                sh 'npx update-browserslist-db@latest --no-install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }

        stage('Smoke Start') {
            steps {
                // run the start in the background for a short smoke test
                sh '''
                nohup npm run start > server-smoke.log 2>&1 &
                sleep 3
                tail -n +1 server-smoke.log | sed -n '1,200p'
                '''
            }
        }
    }

    post {
        always {
            sh 'echo "Pipeline finished with status: $BUILD_STATUS"'
        }
    }
}
